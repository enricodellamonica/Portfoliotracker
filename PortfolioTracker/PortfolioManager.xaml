<UserControl x:Class="PortfolioTracker.PortfolioManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Height="400" Width="500">
    <Grid>

        <Label Content="Portfolio Name" HorizontalAlignment="Left" Margin="10,43,0,0" VerticalAlignment="Top" Width="99"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="202,47,0,0" TextWrapping="Wrap" Text="Add Portfolio Name" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="BtnSave" Content="Save" HorizontalAlignment="Left" Margin="77,92,0,0" VerticalAlignment="Top" Width="75" Click="BtnSave_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="202,92,0,0" VerticalAlignment="Top" Width="75"/>
        <DataGrid Name="Datagrid" AlternatingRowBackground="Aquamarine" AlternationCount="2" AutoGenerateColumns="False" HorizontalAlignment="Left" Margin="34,138,0,0" VerticalAlignment="Top" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Portfolio"></DataGridTextColumn>
                <DataGridHyperlinkColumn  Header="Edit Portfolio Name"></DataGridHyperlinkColumn>
                <DataGridHyperlinkColumn Header="Manage Stocks"></DataGridHyperlinkColumn>
                <DataGridHyperlinkColumn  Header="Delete Portfolio"></DataGridHyperlinkColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
