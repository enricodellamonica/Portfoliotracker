<UserControl x:Class="PortfolioTracker.Reports"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">
    <Grid>
        <Label Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="382,45,0,0"/>
        <DataGrid Name="DgReports" AlternatingRowBackground="Aquamarine" AlternationCount="2" AutoGenerateColumns="False" HorizontalAlignment="Left" Margin="33,103,0,0" VerticalAlignment="Top" >
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" Visibility="Hidden"></DataGridTextColumn>

                <DataGridTextColumn Binding="{Binding Name}" Header="Portfolio"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Name}" Header="Symbols"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Name}" Header="Cost"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Name}" Header="Market Value"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Name}" Header="Return"></DataGridTextColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
